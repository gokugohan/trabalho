<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.projetoaplicado.heldermenezes.trabalho" >
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />


    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <!-- ActiveAndroid -->

        <meta-data
            android:name="AA_DB_NAME"
            android:value="crivo.db" />
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="1" />

        <activity
            android:name=".activities.ActivityStartUp"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MainActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".activities.ActivityDespesaNovo"
            android:label="@string/title_activity_activity_despesa_novo"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.ActivityGrupoNovo"
            android:label="@string/title_activity_activity_grupo_novo"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.ActivityDespesaDetail"
            android:label="@string/title_activity_activity_despesa_detail"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.ActivityGrupoDetail"
            android:label="@string/title_activity_activity_grupo_detail"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.ActivityPessoaDetail"
            android:label="@string/title_activity_activity_pessoa_detail"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.ActivitySimularDetail"
            android:label="@string/title_activity_activity_simular_detail"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.ActivityLogin"
            android:label="@string/title_activity_activity_login"
            android:launchMode="singleTop" />
        <activity
            android:name=".activities.ActivitySignUp"
            android:label="@string/title_activity_activity_sign_up"
            android:launchMode="singleTop" />
        <activity
            android:name=".activities.ActivityEnviarDados"
            android:label="@string/title_activity_activity_enviar_dados" >
        </activity>
    </application>

</manifest>
